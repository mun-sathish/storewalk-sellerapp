<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/layout_enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp">




        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_EnterName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Name:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/enterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="none"
                android:textColor="@color/Black" />
        </LinearLayout>

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="addToContact"
            android:text="Add to Contacts" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_enter_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:orientation="vertical"

            android:padding="10dp">


            <!--
                android:layout_centerHorizontal="true"


                -->


            <LinearLayout
                android:id="@+id/scanner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_EnterNo"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone No:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black" />

                <AutoCompleteTextView
                    android:id="@+id/edit_EnterNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Phone Number"
                    android:inputType="none"
                    android:maxLength="10"
                    android:textColor="@color/Black" />
            </LinearLayout>


        </LinearLayout>


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/grid"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal"
            android:useDefaultMargins="false">

            <Button
                android:id="@+id/one"
                android:layout_gravity="fill"
                android:onClick="one"
                android:text="1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/two"
                android:layout_gravity="fill"
                android:onClick="two"
                android:text="2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/three"
                android:layout_gravity="fill"
                android:onClick="three"
                android:text="3"
                android:textSize="40dp" />

            <Button
                android:id="@+id/four"

                android:layout_gravity="fill"
                android:onClick="four"
                android:text="4"
                android:textSize="40dp" />

            <Button
                android:id="@+id/five"

                android:layout_gravity="fill"
                android:onClick="five"
                android:text="5"
                android:textSize="40dp" />

            <Button
                android:id="@+id/six"

                android:layout_gravity="fill"
                android:onClick="six"
                android:text="6"
                android:textSize="40dp" />

            <Button
                android:id="@+id/seven"

                android:layout_gravity="fill"
                android:onClick="seven"
                android:text="7"
                android:textSize="40dp" />

            <Button
                android:id="@+id/eight"

                android:layout_gravity="fill"
                android:onClick="eight"
                android:text="8"
                android:textSize="40dp" />

            <Button
                android:id="@+id/nine"

                android:layout_gravity="fill"
                android:onClick="nine"
                android:text="9"
                android:textSize="40dp" />

            <Button
                android:id="@+id/clear"

                android:layout_gravity="fill"
                android:onClick="clear"
                android:text="Clear"
                android:textSize="30dp" />


            <Button
                android:id="@+id/zero"

                android:layout_gravity="fill"
                android:onClick="zero"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/refresh"

                android:layout_gravity="fill"
                android:onClick="refresh"
                android:text="refresh"
                android:textSize="20dp" />

            <Button
                android:id="@+id/done"

                android:layout_gravity="fill"
                android:onClick="done"
                android:padding="15dp"
                android:text="DONE"
                android:textSize="30dp" />

            <Button
                android:id="@+id/add"

                android:layout_gravity="fill"
                android:onClick="add"
                android:padding="15dp"
                android:text=" ADD "
                android:textSize="30dp" />

            <Button
                android:id="@+id/backspace"

                android:layout_gravity="fill"
                android:onClick="backspace"
                android:padding="15dp"
                android:text="ESC"
                android:textSize="30dp" />


            <!--
            <Button
                android:layout_columnSpan="3"
                android:layout_gravity="fill"
                android:text="=" />
    -->
        </GridLayout>

    </RelativeLayout>

</RelativeLayout>